<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/default_space"
    android:padding="@dimen/default_space"
    android:background="@color/material_dynamic_neutral_variant10">

    <TextView
        android:id="@+id/tv_appointment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Appointment"
        />

    <TextView
        android:id="@+id/tv_appointment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Appointment Description"
        />

</LinearLayout>