<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/default_space">

    <ImageView
        android:id="@+id/imv_avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHorizontal_bias="0.1"
        android:src="@drawable/ic_launcher_background"
    />

<!--    INFO BOX-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/default_space"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="@id/imv_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imv_avatar"
        app:layout_constraintTop_toTopOf="parent">

<!--        SPECIALTY-->
        <TextView
            android:textStyle="bold"
            android:textColorHighlight="@color/cardview_shadow_start_color"
            android:id="@+id/tv_specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Specialty" />

<!--        FULL NAME-->
        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Full name" />

<!--        EMAIL-->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Email" />

<!--        YEARS OF EXPERIENCE-->
        <TextView
            android:id="@+id/tv_years_of_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Years of Experience" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>