<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/default_space"
    android:paddingBottom="@dimen/default_space"
    android:background="@color/material_dynamic_neutral10">

    <TextView
        android:id="@+id/tv_appointment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Appointment"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_appointment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Appointment Description"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imv_appointment_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="centerCrop"/>

</LinearLayout>